{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": false,
    "inlineSources": false,
    "types": [
      "node",
      "node-rsa",
      "pem",
      "jsonwebtoken",
      "randomstring"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "tools"
  ]
}
